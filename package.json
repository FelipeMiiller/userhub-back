{
  "version": "0.0.1",
  "description": "Backend do UserHub",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "clean:monolith": "rm -rf dist/monolith",
    "clean:notification": "rm -rf dist/notification",
    "build": "nest build",
    "build:monolith": "nest build monolith",
    "build:notification": "nest build notification",
    "build:all": "yarn build:monolith && yarn build:notification",
    "lint": "eslint \"{src,apps,packages,shared,test}/**/*.ts\" --fix",
    "format": "prettier --write \"apps/**/*.ts\" \"packages/**/*.ts\" \"shared/**/*.ts\"",
    "check:format": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "check:lint": "eslint \"{src,apps,packages,shared,test}/**/*.ts\"",
    "start": "nest start",
    "prestart:dev:": " yarn format",
    "start:dev": "nest start --watch",
    "prestart:dev:monolith": "yarn clean:monolith && yarn format",
    "prestart:dev:notification": "yarn clean:notification && yarn format",
    "start:dev:monolith": "nest start --watch monolith",
    "start:dev:notification": "nest start --watch notification",
    "start:debug": "nest start --debug --watch",
    "start:debug:monolith": "nest start monolith --debug --watch --trace-warnings",
    "start:debug:notification": "nest start notification --debug --watch --trace-warnings",
    "start:prod": "node dist/src/main",
    "start:prod:monolith": "node dist/monolith/apps/monolith/src/main.js",
    "start:prod:notification": "node dist/notification/apps/notification/src/main.js",
    "db:compile": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "db:generate": "yarn db:compile migration:generate -d src/common/typeorm/typeorm-datasource.ts",
    "db:generate:identity": "yarn db:compile migration:generate -d packages/identity/persistence/typeorm-datasource.ts",
    "db:migrate:identity": "yarn db:compile migration:run -d packages/identity/persistence/typeorm-datasource.ts",
    "db:migrate:test:identity": "NODE_ENV=test yarn db:compile migration:run -d packages/identity/persistence/typeorm-datasource.ts ",
    "db:drop:identity": "yarn db:compile schema:drop -d packages/identity/persistence/typeorm-datasource.ts",
    "test": "jest --runInBand --detectOpenHandles --config=jest.config.js",
    "test:watch": "jest --watch --config=jest.config.js",
    "test:cov": "jest --coverage --config=jest.config.js",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --config=jest.config.js",
    "test:identity": "jest --runInBand --detectOpenHandles --config=jest.config.js --selectProjects identity",
    "test:notification": "jest --runInBand --detectOpenHandles --config=jest.config.js --selectProjects notification",
    "test:all": "jest --all --runInBand --config=jest.config.js"
  },
  "engines": {
    "node": "22.16.0"
  },
  "dependencies": {
    "@golevelup/nestjs-rabbitmq": "^6.0.1",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.1.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/microservices": "^11.1.5",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.0",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "@slack/webhook": "^7.0.5",
    "@types/handlebars": "^4.1.0",
    "argon2": "^0.43.0",
    "aws-sdk": "^2.1685.0",
    "cache-manager": "^6.4.3",
    "cache-manager-redis-yet": "^5.1.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "handlebars": "^4.7.8",
    "nestjs-cls": "^6.0.1",
    "nodemailer": "^7.0.3",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "ulid": "^3.0.0",
    "winston": "^3.14.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.0",
    "@types/amqplib": "^0.10.7",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/multer": "^1.4.11",
    "@types/node": "^24.0.11",
    "@types/nodemailer": "^6.4.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "8.32.1",
    "@typescript-eslint/parser": "8.32.1",
    "dotenv": "^17.1.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "factory.ts": "^1.4.2",
    "jest": "^29.5.0",
    "jest-mock": "^29.7.0",
    "lint-staged": "^16.0.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}

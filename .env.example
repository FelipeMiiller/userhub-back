REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=5000

# =========================
# SLACK
# =========================
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=monitoring #Nome do canal no slack
SLACK_USERNAME=Backend-Bot #Nome do bot no slack
SLACK_ICON_EMOJI=:robot_face: #Emoji do bot no slack

# =========================
# RABBITMQ
